<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="top.heylhh.blog.dao.article_info.IArticleInfoDAO">
	
	<!-- 建立sql查询结果字段与实体属性的映射关系 -->
	<resultMap id="ArticleInfoMap" type="top.heylhh.blog.view.ArticleInfo">
		<result column="id" property="id" />
		<result column="type_id" property="typeId" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="content_text" property="contentText" />
		<result column="cover" property="cover" />
		<result column="view_count" property="viewCount" />
		<result column="update_time" property="updateTime" />
		<result column="status" property="status" />
		
		<result column="name" property="name" />
	</resultMap>
	
	<!-- 查询所有文章 -->
	<select id="list" resultMap="ArticleInfoMap">
		SELECT
			ai.id,
			ai.type_id,
			ti.name,
			ai.title,
			ai.cover,
			ai.content_text,
			CONVERT (VARCHAR (100), ai.update_time, 23) AS update_time,
			ai.view_count
		FROM
			article_info ai,
			type_info ti
		WHERE
			ai.type_id = ti.id
		<if test="status!=null and status!=''">AND ai.status=#{status}</if>
		<if test="typeId!=null and typeId!=''">AND ai.type_id=#{typeId}</if>
		<if test="startDate!=null and startDate!=''">
			AND ai.update_time BETWEEN #{startDate} AND #{endDate}
		</if>
		<if test="keyWord!=null and keyWord!=''">AND ai.title LIKE #{keyWord}</if>
		ORDER BY
			ai.update_time DESC
	</select>
	
	<!-- 根据主键查询单个文章的信息 -->
	<select id="selectById" resultMap="ArticleInfoMap">
		SELECT
			ai.id,
			ai.type_id,
			ti.name,
			ai.title,
			ai.cover,
			ai.content,
			ai.content_text,
			CONVERT (VARCHAR (100), ai.update_time, 23) AS update_time,
			ai.view_count
		FROM
			article_info ai,
			type_info ti
		WHERE
			ai.type_id = ti.id
		AND ai.status = '1'
		AND ai.id = #{id}
	</select>
	
	
	<!-- 根据文章分类 查询文章的数量 -->
	<select id="countByTypeIdArr" resultMap="ArticleInfoMap">
		SELECT
			COUNT(*)
		FROM
			article_info 
		WHERE
			status = #{status}
		AND type_id IN
			<foreach collection="typeIdArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
	</select>
	
	<!-- 新增文章 -->
	<insert id="insert">
		INSERT INTO article_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="typeId!=null and typeId!=''">type_id,</if>
			<if test="title!=null and title!='' ">title,</if>
			<if test="content!=null and content!=''">content,</if>
			<if test="contentText!=null and contentText!=''">content_text,</if>
			<if test="cover!=null and cover!=''">cover,</if>
			<if test="viewCount!=null and viewCount!='' ">view_count,</if>
			<if test="updateTime!=null and updateTime!=''">update_time,</if>
			<if test="status!=null and status!=''">status,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="typeId!=null and typeId!=''">#{typeId},</if>
			<if test="title!=null and title!=''">#{title},</if>
			<if test="content!=null and content!=''">#{content},</if>
			<if test="contentText!=null and contentText!=''">#{contentText},</if>
			<if test="cover!=null and cover!=''">#{cover},</if>
			<if test="viewCount!=null and viewCount!=''">#{viewCount},</if>
			<if test="updateTime!=null and updateTime!=''">#{updateTime},</if>
			<if test="status!=null and status!=''">#{status},</if>
		</trim>
	</insert>
	
	<!-- 更新文章 -->
	<update id="update">
		UPDATE article_info 
		<set>
			<if test="typeId!=null and typeId!=''">type_id=#{typeId},</if>
			<if test="title!=null and title!='' ">title=#{title},</if>
			<if test="content!=null and content!=''">content=#{content},</if>
			<if test="contentText!=null and contentText!=''">content_text=#{contentText},</if>
			<if test="cover!=null and cover!=''">cover=#{cover},</if>
			<if test="viewCount!=null and viewCount!='' ">view_count=#{viewCount},</if>
			<if test="updateTime!=null and updateTime!=''">update_time=#{updateTime},</if>
			<if test="status!=null and status!=''">status=#{status},</if>
		</set>
		WHERE id = #{id}
	</update>
	
	
	<!-- 更新文章浏览量 -->
	<update id="updateViewCount">
		UPDATE article_info 
		<set>
			<if test="viewCount!=null and viewCount!='' ">view_count=#{viewCount},</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<!-- 批量移动文章到某个分类 -->
	<update id="batchUpdate">
		UPDATE article_info 
		<set>
			<if test="typeId!=null and typeId!=''">type_id=#{typeId},</if>
			<if test="status!=null and status!=''">status=#{status},</if>
		</set>
		WHERE id IN
		<foreach collection="idArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
	</update>
	
	<!-- 根据文章主键批量删除 -->
	<delete id="batchDelete">
		DELETE FROM article_info WHERE id IN
		<foreach collection="idArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<!-- 批量删除 -->
	<delete id="batchDeleteByTypeIdArr">
		DELETE FROM article_info WHERE type_id IN
		<foreach collection="typeIdArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
</mapper>
